---
import PasswordInput, { PassStrength } from "../PasswordInput.astro";
---

<div class="flex flex-col gap-10 p-20">
  <h1 class="text-2xl font-semibold">Password fields with label on edge</h1>
  <div class="flex gap-10">
    <div class="flex flex-col gap-2">
      <h2 class="font-semibold">Default</h2>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Edge"
            size="Large"
            passSecurity={PassStrength.medium}
            required={false}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Edge"
            size="Medium"
            passSecurity={PassStrength.strong}
            required={false}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Edge"
            size="Small"
            helperText="Helper text"
            passSecurity={PassStrength.fortress}
            required={false}
        />
      </div>
    </div>

    <div class="flex flex-col gap-2">
      <h2 class="font-semibold">With validation errors</h2>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Edge"
            size="Large"
            error="Add at least 1 number and 1 symbol."
            passSecurity={PassStrength.weak}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Edge"
            size="Medium"
            error="Add at least 1 number and 1 symbol."
            passSecurity={PassStrength.medium}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Edge"
            size="Small"
            error="Add at least 1 number and 1 symbol."
            passSecurity={PassStrength.strong}
        />
      </div>
    </div>
  </div>

  <h1 class="text-2xl font-semibold">Password fields with label above field</h1>
  <div class="flex gap-10">
    <div class="flex flex-col gap-2">
      <h2 class="font-semibold">Default</h2>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Outside"
            size="Large"
            required={false}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Outside"
            size="Medium"
            required={false}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Outside"
            size="Small"
            helperText="Helper text"
            required={false}
        />
      </div>
    </div>

    <div class="flex flex-col gap-2">
      <h2 class="font-semibold">With validation errors</h2>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Outside"
            size="Large"
            error="Add at least 1 number and 1 symbol."
            passSecurity={PassStrength.weak}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Outside"
            size="Medium"
            error="Add at least 1 number and 1 symbol."
            passSecurity={PassStrength.medium}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Outside"
            size="Small"
            error="Add at least 1 number and 1 symbol."
            passSecurity={PassStrength.strong}
        />
      </div>
    </div>
  </div>

  <h1 class="text-2xl font-semibold">Password fields with label inside field</h1>
  <div class="flex gap-10">
    <div class="flex flex-col gap-2">
      <h2 class="font-semibold">Default</h2>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Inside"
            size="Large"
            required={false}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Inside"
            size="Medium"
            required={false}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Inside"
            size="Small"
            helperText="Helper text"
            required={false}
        />
      </div>
    </div>

    <div class="flex flex-col gap-2">
      <h2 class="font-semibold">With validation errors</h2>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Inside"
            size="Large"
            error="Add at least 1 number and 1 symbol."
            passSecurity={PassStrength.weak}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Inside"
            size="Medium"
            error="Add at least 1 number and 1 symbol."
            passSecurity={PassStrength.medium}
        />
      </div>
      <div class="mt-2">
        <PasswordInput
            labelPosition="Inside"
            size="Small"
            error="Add at least 1 number and 1 symbol."
            passSecurity={PassStrength.strong}
        />
      </div>
    </div>
  </div>
</div>
