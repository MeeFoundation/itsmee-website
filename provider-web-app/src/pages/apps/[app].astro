---
import Button from "@components/Button.astro";
import Input from "@components/Input.astro";
import Layout from "@layouts/Layout.astro";
import Loading from "@components/Loading.astro";
import Header from "@components/Header.astro";
const { app } = Astro.params;
---

<Layout title="Create App">
  <Header />
  <main class="flex h-full min-h-screen pt-20" data-id={app} id="main">
    <article
      class="flex h-full w-full flex-1 flex-col items-center justify-center"
    >
      <div class="flex w-[768px] flex-col items-start justify-center gap-4">
        <a class="text-base font-semibold leading-6 text-[#3B5B63]" href="/apps"
          ><span class="mr-2">&larr;</span>Back to apps</a
        >
        <Loading />
        <section
          class="hidden w-full flex-col items-start gap-6 rounded-xl border border-solid border-slate-300 bg-white p-8 text-slate-800"
          id="app-data"
        >
          <div class="flex w-full flex-col gap-6">
            <div class="flex flex-col gap-2">
              <div class="text-3xl font-semibold leading-10" id="app-name">
              </div>
            </div>

            <form
              class="mx-auto flex w-full flex-col items-center gap-6"
              id="create-app"
              autocomplete="off"
            >
              <Input
                className="w-full"
                id="name"
                type="text"
                label="Name"
                placeholder="Name"
                autocomplete="off"
                required
              />
              <Input
                className="w-full"
                id="url"
                type="text"
                label="Url"
                placeholder="Url"
                autocomplete="off"
                required
              />
              <Input
                className="w-full"
                id="agent_service_url"
                type="text"
                label="Agent Service Url"
                placeholder="Agent Service Url"
                autocomplete="off"
                required
              />
              <Input
                className="w-full"
                id="agent_service_id"
                type="text"
                label="Agent Service Id"
                placeholder="Agent Service Id"
                autocomplete="off"
                required
              />
              <div class="self-end">
                <Button
                  id="save-app"
                  type="button"
                  className="w-auto px-4">Save app</Button
                >
              </div>
            </form>
          </div>
        </section>
      </div>
    </article>
  </main>
</Layout>

<script>
  import type { ProviderApp } from "@utils/types";
  const appName = document.getElementById("app-name") as HTMLDivElement | null;
  const nameInput = document.getElementById("name") as HTMLInputElement | null;
  const urlInput = document.getElementById("url") as HTMLInputElement | null;
  const agentServiceUrlInput = document.getElementById(
    "agent_service_url"
  ) as HTMLInputElement | null;
  const agentServiceIdInput = document.getElementById(
    "agent_service_id"
  ) as HTMLInputElement | null;
  const switcher = document.getElementById(
    "enabled-switch"
  ) as HTMLInputElement | null;

  const main = document.getElementById("main");
  const appDataElement = document.getElementById("app-data");
  const loading = document.getElementById("loading");

  const saveAppButton = document.getElementById("save-app");
  saveAppButton?.addEventListener("click", () => {
    window.location.href = "/apps";
  });

  const id: number = Number(main?.dataset.id) ?? 0;

  const response = await fetch("/apps.json");

  const data: ProviderApp[] = await response.json();
  const appData = data[id];

  if (appData) {
    appDataElement?.classList.remove("hidden");
    appDataElement?.classList.add("flex");

    loading?.classList.add("hidden");

    if (appName) {
      appName.innerHTML = appData.name;
    }

    if (nameInput) {
      nameInput.value = appData.name;
    }
    if (urlInput) {
      urlInput.value = appData.url;
    }
    if (agentServiceUrlInput) {
      agentServiceUrlInput.value = appData.agent_service_url;
    }
    if (agentServiceIdInput) {
      agentServiceIdInput.value = appData.agent_service_id;
    }
    if (switcher) {
      switcher.checked = appData.enabled;
    }
  }
</script>
