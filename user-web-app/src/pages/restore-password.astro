---
import {
  Button,
  ButtonLink,
  AuthForm,
  Alert,
  PasswordInput,
} from "mee-components";
import Layout from "@layouts/Layout.astro";
---

<Layout title="Forgot password">
  <main
    class="flex h-screen w-screen flex-col items-center justify-center bg-auth-gradient dark:bg-auth-gradient-dark"
  >
    <div
      class="relative z-50 flex h-full max-w-130 flex-col items-center justify-center p-6"
    >
      <div
        class="flex max-w-130 flex-col items-center justify-between rounded-2xl bg-white px-0 pb-0 pt-16 shadow-2 md:w-130 dark:border dark:border-grey-800 dark:bg-grey-900"
      >
        <AuthForm
          id="first-form"
          title="Create a new password"
          subtitle="Type your new password"
          formId="forgot-password-form"
          ><PasswordInput id="password" label="Password" size="lg" required />
          <PasswordInput
            id="confirm_password"
            label="Confirm password"
            autocomplete="off"
            size="lg"
            required
          />
          <Alert
            id="success-alert"
            icon="check-circle"
            type="success"
            title="Your password has been changed successfully"
          />
          <Button id="reset-password-button" type="button" className="w-full"
            >Reset password</Button
          >
        </AuthForm>
        <div
          class="flex w-full justify-center rounded-b-2xl border-t border-solid border-t-grey-200 bg-grey-50 px-12 py-4 text-center text-xs leading-4 tracking-0.02 text-grey-600 dark:border-t-grey-800"
        >
          <ButtonLink
            href="/sign-in"
            id="go-back-button"
            type="button"
            leftIcon="chevron-left text-lg"
            buttonType="tertiary"
            size="m"
            style="outlined"
            className="border-none">Go back</ButtonLink
          >
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import { addFormListeners, validateForm } from "@utils/validation";

  const forgotPasswordForm = document.getElementById(
    "forgot-password-form"
  ) as HTMLFormElement | null;

  const resetPasswordButton = document.getElementById("reset-password-button");
  const successAlert = document.getElementById("success-alert");
  const goBackButton = document.getElementById("go-back-button");
  const formInputs = document.querySelectorAll(".form-input");
  const data = { password: "" };

  const showNotification = () => {
    formInputs.forEach((input) => {
      input.classList.add("hidden");
    });

    resetPasswordButton?.classList.add("hidden");
    successAlert?.classList.remove("hidden");
    if (goBackButton) {
      goBackButton.innerHTML = "Go to sign in";
    }
  };
  const submitForm = (inputs: NodeListOf<HTMLInputElement>) => {
    const formValid = validateForm(inputs);
    if (formValid) {
      const emailData = Array.from(inputs).reduce(
        (acc, input) => ({ ...acc, [input.id]: input.value }),
        { password: "" }
      );
      data.password = emailData.password;
      showNotification();
    }
  };

  if (forgotPasswordForm) {
    const inputs = forgotPasswordForm.querySelectorAll("input");
    addFormListeners(inputs);
    resetPasswordButton?.addEventListener("click", () => {
      submitForm(inputs);
    });
    forgotPasswordForm.onsubmit = (e) => {
      e.preventDefault();
      submitForm(inputs);
    };
  }
</script>
