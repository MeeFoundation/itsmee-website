---
interface Props {
  className?: string;
  id: string;
  label: string;
  required?: boolean;
  type:
    | "button"
    | "checkbox"
    | "color"
    | "date"
    | "datetime-local"
    | "email"
    | "file"
    | "hidden"
    | "image"
    | "month"
    | "number"
    | "password"
    | "radio"
    | "range"
    | "reset"
    | "search"
    | "submit"
    | "tel"
    | "text"
    | "time"
    | "url"
    | "week";

    placeholder?: string;
    autocomplete?: string;
    pattern?: string;
}

const {
  className,
  id,
  type,
  label,
  required = false,
  placeholder,
  autocomplete,
  pattern
} = Astro.props;
---

<div class:list={[className]}>
  <label for={id} class="mb-2 block text-sm font-medium text-primary"
    >{label}</label
  >
  <input
    type={type}
    id={id}
    class="block w-full rounded-lg border border-primary bg-white py-2.5 px-4 text-sm text-primary focus:ring-primary focus:ring-1"
    required={required}
    placeholder={placeholder}
    autocomplete={autocomplete}
    pattern={pattern}
  />
  <div
    class="validation-message mt-0.5 hidden gap-x-0.5 whitespace-pre-line text-wrap text-xs text-red-600 "
  >
  </div>
</div>