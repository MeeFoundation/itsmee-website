---
import Layout from "@layouts/Layout.astro";
import { Button, Input } from "mee-components";
---

<Layout title="Edit Connection">
  <main class="flex h-full min-h-screen p-6" id="main">
    <article
      class="flex h-full w-full flex-1 flex-col items-center justify-start"
    >
      <div
        class="flex w-full max-w-192 flex-col items-start justify-center gap-4"
      >
        <a
          class="text-base font-semibold leading-6 text-brand-700"
          href="/#connections"
          ><span class="mr-2">&larr;</span>Back to connections</a
        >
        <section
          class="w-full flex-col items-start gap-6 rounded-xl border border-solid border-gray-300 bg-white p-8 text-gray-800"
        >
          <div class="flex w-full flex-col gap-6">
            <div class="flex flex-col gap-2">
              <div class="text-3xl font-semibold leading-10">
                New connection
              </div>
            </div>

            <form
              class="mx-auto flex w-full flex-col items-center gap-6"
              id="create-connection"
              autocomplete="off"
            >
              <Input
                className="w-full"
                id="name"
                type="text"
                label="Name"
                size="lg"
                labelPosition="inside"
                autocomplete="off"
                required
              />
              <Input
                className="w-full"
                id="url"
                type="text"
                label="Image Url"
                size="lg"
                labelPosition="inside"
                autocomplete="off"
                required
              />
              <div class="self-end">
                <Button
                  id="save-connection"
                  type="button"
                  className="w-auto px-4">Save</Button
                >
              </div>
            </form>
          </div>
        </section>
      </div>
    </article>
  </main>
</Layout>

<script>
  import { getCookie } from "@utils/cookie";
import { HashRouter } from "mee-components";

  const initCreateCollection = () => {
    const user = getCookie("user");
    if (!user) {
      window.location.hash = "#sign-in";
    }
    const saveAppButton = document.getElementById("save-connection");
    saveAppButton?.addEventListener("click", () => {
      window.location.href = "/connections";
    });
  };

  HashRouter.initPageListeners(
    "create-connection",
    initCreateCollection,
    "Create Connection"
  );
</script>
