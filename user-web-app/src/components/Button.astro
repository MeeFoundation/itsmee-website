---
interface Props {
  className?: string;
  id: string;
  type: "submit" | "reset" | "button" | undefined | null;
}

const { className, id, type } = Astro.props;
---

<button
  id={id}
  type={type}
  class:list={[
    "w-full self-stretch rounded-lg bg-primary px-5 py-2.5 text-center text-sm font-medium text-white hover:ring-1 hover:ring-blue-dark focus:outline-none focus:ring-1 focus:ring-blue sm:w-auto focus-visible:outline-none",
    className,
  ]}
>
  <slot /></button
>
