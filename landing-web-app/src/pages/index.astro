---
import Layout from "@layouts/Layout.astro";
import { Header, Footer, ButtonLink, AppButtons } from "mee-components";
import { header, footer, appLink } from "../config";
import TypingLogo from "@components/TypingLogo.astro";
import MirrorLogo from "@components/MirrorLogo.astro";
import DataSection from "@components/DataSection.astro";
---

<Layout title="Welcome to Mee">
  <Header header={header} disableMobileMenu={true} />
  <main class="w-screen overflow-hidden dark:bg-darky">
    <article
      class="relative mt-27 flex h-full w-screen flex-col items-center justify-between gap-10 overflow-hidden md:gap-20"
    >
      <section
        class="mt-10 flex h-full w-screen flex-col items-center justify-center gap-10 md:mt-20 md:gap-20"
      >
        <div
          class="flex max-w-7xl flex-col items-center justify-center gap-4 px-5 transition-opacity duration-500"
        >
          <div><TypingLogo /><MirrorLogo /></div>
          <div
            class="flex max-w-7xl flex-col gap-0.5 text-pretty text-center text-lg text-grey-900 md:text-xl lg:text-2xl dark:text-grey-50"
          >
            <h3>
              Mee puts you in control of your data and allows you to share it
              privately with other people and companies.
            </h3>
            <h3 class="gradient-title font-bold">
              More control. More Privacy. More Convenience.
            </h3>
            <h3 class="text-lg font-thin lg:text-xl">
              Developed by The Mee Foundation nonprofit. By the people. For the
              people.
            </h3>
          </div>
        </div>
      </section>
      <ButtonLink href=`${appLink}#sign-up` size="xxl">Sign up</ButtonLink>
      <section
        class="flex h-full w-screen max-w-7xl flex-col items-center justify-center"
      >
        <img class="w-full dark:hidden" src="/images/illustration.svg" />
        <img
          class="hidden w-full dark:block"
          src="/images/illustration-dark.svg"
        />
      </section>
      <DataSection />

      <section class="-mb-40">
        <div
          class="section-bg relative flex w-screen flex-col items-center gap-14 px-10 pb-40 text-white md:gap-20 md:pb-80 lg:gap-24"
        >
          <div class="section-bg-image absolute h-full w-full max-w-7xl"></div>
          <div
            class="flex w-full max-w-7xl flex-col-reverse items-center justify-between gap-4 pt-48 md:flex-row md:gap-0 md:pt-80"
          >
            <div class="z-70 flex flex-1 flex-col items-start gap-8 md:gap-16">
              <div class="flex flex-col items-start gap-4">
                <div class="flex flex-col items-start">
                  <div
                    class="text-left text-lg leading-thick text-grey-300 md:text-xl md:leading-normal lg:text-2xl"
                  >
                    Mee for web
                  </div>
                  <h2
                    class="text-left text-3xl font-bold leading-thick md:text-4xl md:leading-normal lg:text-5xl"
                  >
                    Privacy first
                  </h2>
                </div>
                <h3
                  class="text max-w-3xl text-pretty text-start text-xl md:pr-10 md:text-2xl"
                >
                  Mee shows you a dashboard of your connections. If you revoke
                  access on a connection, the other party is cut off from future
                  updates. If you delete a connection, your personal information
                  will also be automatically deleted from the other party.
                </h3>
              </div>
              <div>
                <ButtonLink
                  href=`${appLink}#sign-up`
                  style="filled"
                  buttonType="tertiary"
                  size="xxl"
                >
                  Sign up</ButtonLink
                >
              </div>
            </div>
            <div class="z-70 flex-1">
              <img
                class="w-full rounded-lg md:rounded-2xl"
                src="/images/browser.png"
              />
            </div>
          </div>
        </div>
        <div
          class="section-2-bg relative flex w-screen flex-col items-center px-10 pb-80 text-grey-800"
        >
          <div
            class="flex w-full max-w-7xl flex-col items-center justify-between gap-4 md:flex-row md:gap-40"
          >
            <div class="w-full max-w-80 flex-1">
              <img class="w-full" src="/images/connections.png" />
            </div>
            <div class="z-70 flex flex-1 flex-col items-start gap-4">
              <div class="flex flex-col items-start gap-4">
                <div class="flex flex-col items-start">
                  <div
                    class="text-left text-lg leading-thick text-grey-500 md:text-xl md:leading-normal lg:text-2xl"
                  >
                    Mee for smartphone
                  </div>
                  <h2
                    class="section-title text-left text-3xl font-bold leading-thick md:text-4xl md:leading-normal lg:text-5xl"
                  >
                    Bring the convenience of profile sharing to your phone
                  </h2>
                </div>
                <h3
                  class="text max-w-3xl text-pretty text-start text-xl md:text-2xl"
                >
                  Mee integrates with Apple Contacts, and automatically updates
                  them if the other person is also a Mee user. Mee stores a copy
                  of all of your information on your phone. Nothing is ever
                  shared without your explicit consent. The Mee Foundation never
                  sees any of your data, and never stores any of it on our
                  servers.
                </h3>
                <a
                  class="my-4 w-full text-xl leading-relaxed text-brand-600 underline md:text-2xl"
                  href="https://smartwallet.mee.foundation/"
                >
                  Learn more about Mee Smartwallet <i
                    class="bi bi-arrow-right ml-2"></i>
                </a>
                <h3
                  class="text max-w-3xl text-pretty text-start text-xl md:text-2xl"
                >
                  Download our experimental Mee mobile app and bring the power
                  of Mee with you wherever you go.
                </h3>
                <AppButtons
                  noDescription
                  class="!w-full !items-start !justify-start !px-0 pt-4"
                  buttonsClass="!flex-row-reverse"
                />
              </div>
            </div>
          </div>
        </div>
      </section>

      <Footer footer={footer} mode="dark" />
    </article>
  </main>
</Layout>

<style is:global>
  .section-bg {
    background: linear-gradient(
      180deg,
      #0f172a 12.34%,
      #334155 34.28%,
      #475569 45.64%,
      #64748b 56.85%,
      #f8fafc 100%
    );
  }
  .section-2-bg {
    background: linear-gradient(187.32deg, #f8fafc 5.27%, #f3f8f8 93.89%);
  }

  .section-title {
    background: linear-gradient(90deg, #0f172a 0%, #4f868e 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }
  .section-bg-image::after {
    content: "";
    max-width: 80rem;
    width: 100%;
    height: 100%;
    background: url("/images/stars.svg") no-repeat;
    position: absolute;
    display: inline-block;
    left: 0;
    top: 0;
    background-size: 100% 100%;
  }
  .gradient-title {
    background: linear-gradient(90deg, #0f172a 0%, #4f868e 100%), #1e293b;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }
  .dark .gradient-title {
    background: linear-gradient(90deg, #f8fafc 0%, #4f868e 100%), #e2e8f0;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }
</style>
