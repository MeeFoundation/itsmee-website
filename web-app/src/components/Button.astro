---
interface Props {
  className?: string;
  id: string;
  type: "submit" | "reset" | "button" | undefined | null;
}

const { className, id, type } = Astro.props;
---

<button
  id={id}
  type={type}
  class:list={[
    "w-full self-stretch rounded-lg bg-primary px-5 py-2.5 text-center text-sm font-medium text-white hover:ring-2 focus:outline-none focus:ring-4 focus:ring-blue-300 sm:w-auto",
    className,
  ]}
>
  <slot /></button
>
